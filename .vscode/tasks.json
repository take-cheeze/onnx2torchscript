{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "install and test",
            "type": "shell",
            "command": "eval $(direnv export $SHELL) && python3 -m pip install -e '.[test]' && python3 -m pytest -s .",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
            "options": {
                "env": {
                    "TORCH_SHOW_CPP_STACKTRACES": "1"
                }
            }
        }
    ]
}